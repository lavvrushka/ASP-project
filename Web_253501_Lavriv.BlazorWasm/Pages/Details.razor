@page "/details"

@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Web_253501_Lavriv.Domain.Entities
@using Web_253501_Lavriv.Domain.Models
@using Web_253501_Lavriv.BlazorWasm.Services
@inject IDataService DataService
@inject IAccessTokenProvider TokenProvider
@inject HttpClient Http

<PageTitle>Details List</PageTitle>

<AuthorizeView>
    <Authorized>
        <CategorySelector />
        <DetailsList DetailSelected="OnDetailSelected" />  <!-- Передаем событие выбора объекта -->
        <Pager />
        <DetailDetails SelectedDetail="SelectedDetail" />  <!-- Передаем выбранный объект в компонент -->
    </Authorized>
    <NotAuthorized>
        <p>You are not authorized to view this content. Please log in.</p>
    </NotAuthorized>
</AuthorizeView>

@code {
    private Detail SelectedDetail { get; set; }  // Храним выбранный объект

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Получаем токен для авторизации
            var tokenRequest = await TokenProvider.RequestAccessToken();
            if (tokenRequest.TryGetToken(out var token))
            {
                // Устанавливаем токен в заголовок запроса
                Http.DefaultRequestHeaders.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token.Value);

                // Загружаем данные через IDataService
                await DataService.GetDetailsListAsync(1); // Загружаем первую страницу
            }
            else
            {
                Console.WriteLine("Unable to get the token.");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"An error occurred: {ex.Message}");
        }
    }

    // Обрабатываем выбор объекта
    private void OnDetailSelected(int id)
    {
        // Находим выбранный объект по ID и сохраняем в SelectedDish
        SelectedDetail = DataService.Details.FirstOrDefault(d => d.Id == id);
    }
}
