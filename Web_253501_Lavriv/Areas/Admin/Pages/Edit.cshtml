@page
@model WEB_253501_LAVRIV.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <!-- Добавлен атрибут enctype -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Detail.Id" />
            <div class="form-group">
                <label asp-for="Detail.Name" class="control-label"></label>
                <input asp-for="Detail.Name" class="form-control" />
                <span asp-validation-for="Detail.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Detail.Description" class="control-label"></label>
                <input asp-for="Detail.Description" class="form-control" />
                <span asp-validation-for="Detail.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Detail.Price" class="control-label"></label>
                <input asp-for="Detail.Price" class="form-control" />
                <span asp-validation-for="Detail.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Detail.CategoryId" class="control-label"></label>
                <select asp-for="Detail.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Detail.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Текущее изображение:</label>
                <div>
                    <img src="@Url.Content(Model.Detail.Image)" alt="Текущее изображение" style="max-width: 100%; height: auto;" />
                </div>
            </div>

            <div class="form-group">
                <label>Изображение</label>
                <input type="file" asp-for="UploadFile" class="form-control" /> <!-- Поле загрузки файла -->
                <span asp-validation-for="UploadFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
